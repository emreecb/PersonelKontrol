@model Otokar.Models.Data.MultiViewModel

<script type="text/javascript" src="/scripts/bootstrap-datetimepicker.js"></script>
<link rel="stylesheet" href="/Content/bootstrap-datetimepicker.css" />

@{
    ViewBag.Title = "Yeni Personel";
}

<h2>Yeni Personel</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">Personel Adı</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Personel.PersonelAdi, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">Personel Soyadı</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Personel.PersonelSoyAdi, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">Doğum Tarihi</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Personel.PersonelDogumTarihi, new { @class = "form-control"})
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">Doğum Yeri</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Personel.PersonelDogumYeri, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">Cinsiyet</label>
                <div class="col-sm-6">
                    @Html.DropDownListFor(m => m.Personel.PersonelCinsiyet, new List<SelectListItem>
                     {
                        new SelectListItem{ Text="Seçiniz", Value = "Erkek" },
                        new SelectListItem{ Text="Erkek", Value = "Erkek" },
                        new SelectListItem{ Text="Kadın", Value = "Kadın" },
                     }, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">TC Kimlik No</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Personel.PersonelTcNo, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">Medeni Durum</label>
                <div class="col-sm-6">
                    @Html.DropDownListFor(m => m.Personel.PersonelMedeniDurum, new List<SelectListItem>
                     {
                        new SelectListItem{ Text="Seçiniz", Value = "Bekar" },
                        new SelectListItem{ Text="Bekar", Value = "Bekar" },
                        new SelectListItem{ Text="Evli", Value = "Evli" },
                     }, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">İşe Başlama Tarihi</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Personel.PersonelIseBaslamaTarihi, new { @class = "form-control"})
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">Meslek</label>
                <div class="col-sm-6">
                    @Html.DropDownListFor(m => m.Personel.PersonelMeslek, ViewBag.DropdownListFor2 as SelectList, "Lütfen Seçim Yapın", new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">Departman</label>
                <div class="col-sm-6">
                    @Html.DropDownListFor(m => m.Personel.PersonelCalistigiDepartman, ViewBag.DropdownListFor as SelectList, "Lütfen Seçim Yapın", new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">Görevi</label>
                <div class="col-sm-6">
                    @Html.DropDownListFor(m => m.Personel.PersonelGorevi, ViewBag.DropdownListFor3 as SelectList, "Lütfen Seçim Yapın", new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Oluştur" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>

<script type="text/javascript">
    $(function () {
        $('#PersonelDogumTarihi').datetimepicker();
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
