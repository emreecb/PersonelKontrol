@model Otokar.Models.Data.PersonelIzinleri

@{
    ViewBag.Title = "Personel İzini Oluştur";
}

<h2>Personel İzini Oluştur</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Personel Izinleri</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">Personel Adı</label>
                <div class="col-sm-6">
                    @Html.DropDownListFor(m => m.PersonelAdi, ViewBag.DropdownListFor1 as SelectList, "Lütfen Seçim Yapın", new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">Personel Soyadı</label>
                <div class="col-sm-6">
                    @Html.DropDownListFor(m => m.PersonelSoyAdi, ViewBag.DropdownListFor2 as SelectList, "Lütfen Seçim Yapın", new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">İzin Başlangıç Tarihi</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.IzinBaslangicTarihi, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label class="col-sm-2 control-label">İzin Bitiş Tarihi</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.IzinBitisTarihi, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Oluştur" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye Dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
