<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Ana Sayfa", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Personel Yönetim<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Personeller", "Index", "Personel")</li>
                            <li>@Html.ActionLink("Departmanlar", "Index", "Departman")</li>
                            <li>@Html.ActionLink("Personel Görevleri", "Index", "Gorev")</li>
                            <li>@Html.ActionLink("Personel Meslek Grupları", "Index", "Meslek")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Personel Izinleri", "Index", "PersonelIzinleri")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Stok Yönetim<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Stoktaki Envanterler", "Index", "StoktakiEnvanterSayisi")</li>
                            <li>@Html.ActionLink("Personele Kayıtlı Envanter", "Index", "PersoneleKayitliEnvanter")</li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="//www.otokar.com.tr">Otokar.com.tr</a></li>
                    <li>@Html.ActionLink("İletişim", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-top:50px">
        @RenderBody()
        <hr />
        <footer>
            <p>
                <img src="~/Images/koc-logo.png" width="75px" height="55px" title="Koç">&nbsp &nbsp
                © 2005- @DateTime.Now.Year Otokar Otomotiv ve Savunma Sanayi A.Ş <img style="margin-left:450px" src="~/Images/otokar-logo.png" width="75px" height="22px" title="Koç">
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
